@startuml container

!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

skinparam linetype polyline

title HMPPS Integration API - Container Diagram

Boundary(moj, "Ministry of Justice (MoJ)", "Ministerial Department") {
  Boundary(hmpps, "His Majesty's Prison and Probation Service (HMPPS)", "Executive Agency") {
    Boundary(hmpps_integration_api, "Integration API", "A single point of entry for services to retrieve data from multiple HMPPS systems."){
        System(springboot_api, "REST API", "Springboot Kotlin API")
    }

    System(prison_api, "Prison API", "tech stack?")

    System(probation_offender_search, "Probation Offender Search", "tech stack?")

    System(prison_offender_search, "Prisoner Offender Search", "tech stack?")
  }
}

Rel(hmpps_integration_api, prison_api, "Uses")
Rel(hmpps_integration_api, probation_offender_search, "Uses")
Rel(hmpps_integration_api, prison_offender_search, "Uses")

@enduml